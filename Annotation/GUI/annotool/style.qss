}

QCheckBox {
  spacing: 2px;
  margin: 0px;
  padding: 0px;
}

QCheckBox::indicator {
  width: 13px;
  height: 13px;
}

QToolTip {
  background-color: #3A4450;
  border-radius: 5px;
  border: 1px solid #A0AEC0;
  color: #A0AEC0;
  font-family: 'Montserrat', sans-serif;
}





